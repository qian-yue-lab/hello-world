    <script>
        const audio = document.getElementById('audioPlayer');
        
        function playAudio() {
            audio.play();
        }
        
        function pauseAudio() {
            audio.pause();
        }
        
        function restartAudio() {
            audio.currentTime = 0;
            audio.play();
        }
        
        // 空格键控制播放/暂停
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault();
                if (audio.paused) {
                    audio.play();
                } else {
                    audio.pause();
                }
            }
        });
    </script>
